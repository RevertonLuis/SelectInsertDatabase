45 */2 * * * (hora=$(date "+\%H"); /opt/miniconda3/envs/model_env/bin/python /discolocal/process-meteogramas/callsModelProcessing.py 9 > /discolocal/process-meteogramas/logs/wrf_sse.${hora}.log 2> /discolocal/process-meteogramas/logs/wrf_sse.${hora}.err)


